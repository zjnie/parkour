/**index.wxss**/
.header-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 470rpx;
  background-color: #1A52CC;
}

.header {
  position: relative;
  margin-top: 98rpx;
  padding-left: 28rpx;
  display: flex;
  align-items: center;
  z-index: 1;
}

.logo {
  height: 80rpx;
}

.search {
  display: flex;
  align-items: center;
  padding: 0 16rpx;
  margin-left: 44rpx;
  width: 260rpx;
  height: 60rpx;
  background-color: #fff;
  border-radius: 30rpx;
}

.search-divide {
  height: 60%;
  width: 1px;
  margin: 0 10rpx;
  background-color: #E5E5E5;
}

swiper {
  margin-top: 54rpx;
  height: 342rpx;
}

swiper-item {
  padding: 0 6rpx;
  margin-left: 18rpx;
  width: calc(100% - 36rpx) !important;
}

.swiper-image-container {
  width: 100%;
  height: 100%;
  border-radius: 22rpx;
  overflow: hidden;
}

.swiper-image {
  width: 100%;
}

.news {
  margin: 40rpx 30rpx;
  border-radius: 22rpx;
  background-color: #fff;
}

.news-header {
  padding: 0 28rpx;
  height: 86rpx;
  line-height: 86rpx;
}

.news-body {
  height: calc(100vh - 732rpx);
  padding: 0 28rpx;
  overflow: auto;
}

.news-item {
  display: flex;
  align-items: center;
  padding: 40rpx 0;
  border-top: 2rpx solid #f5f5f5;
}

.news-item-image {
  width: 194rpx;
  height: 160rpx;
  border-radius: 14rpx;
  flex-shrink: 0;
  margin-right: 34rpx;
}

.news-item-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  line-height: 44rpx;
  height: 88rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.news-item-time {
  margin-top: 32rpx;
  font-size: 28rpx;
  color: #989696;
}

